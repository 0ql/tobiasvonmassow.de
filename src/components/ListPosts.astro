---
const posts = await Promise.all<any>(
  Object.values(
    import.meta.glob("../pages/Posts/*.{md,mdx}")
  ).map((p) => p())
);
---

<section class="grid gap-6">
  {
    posts.map((post) => (
      <a href={post.url} class="block btn px-7">
        <h3 class="text-xl font-normal">{post.frontmatter.title}</h3>
        <p>{post.frontmatter.pubDate}</p>
      </a>
    ))
  }
</section>
