---
import Base from "./base.astro";
const { title } = Astro.props;
---

<Base {title}>
	<slot />
	<style is:global>
		.jnnorm pre {
			background-color: var(--bg-thrid-color);
		}
		.jnheader p {
			margin: 0.75rem 0;
		}
		.jnnorm h1 {
			font-size: 2rem;
			font-weight: bold;
		}
		.jnnorm h2 {
			margin-top: 4rem;
			font-size: 1.5rem;
			border-bottom: 2px solid var(--text-scnd-color);
			line-height: 1.8;
		}
		.jnnorm h3 {
			/* color: var(--text-scnd-color); */
			font-size: 1.25rem;
			text-align: center;
			padding: 0.25rem 0;
			/* border-bottom: 1px solid; */
		}
		.jnnorm dl {
			margin: 1rem 2rem;
		}
		.jnnorm dd {
			margin: 0.5rem 1rem;
		}
		.jnkurzueamtabk {
			color: var(--text-scnd-color);
			font-size: 1.5rem;
		}
		.jnzitat {
			font-style: italic;
			background-color: var(--bg-thrid-color);
			border-radius: 0.75rem;
			padding: 1rem;
			margin: 0.75rem 0;
		}
		.jnnorm {
			margin-top: 2rem;
		}
		.jnhtml {
			margin-top: 1rem;
		}
		.jurAbsatz {
			margin-top: 1rem;
		}
		.jnfussnote h4 {
			margin-top: 2rem;
			font-size: 1rem;
			text-align: center;
		}
	</style>
</Base>
